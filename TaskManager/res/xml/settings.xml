<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- system setting -->

    <PreferenceCategory android:title="@string/settings_system_configure" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="auto_run"
        android:persistent="true"
        android:title="@string/settings_auto_run_title"
        android:summary="@string/settings_auto_run_summary"/>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="auto_kill"
        android:persistent="true"
        android:title="@string/settings_auto_kill_title"
        android:summary="@string/settings_auto_kill_summary" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="enable_notification"
        android:dependency="auto_kill"
        android:persistent="true"
        android:title="@string/settings_enable_notification_title"
        android:summary="@string/settings_enable_notification_summary" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="enable_ignore"
        android:persistent="true"
        android:title="@string/settings_enable_ignore_title"
        android:summary="@string/settings_enable_ignore_summary" />

    <!-- view configure -->
    <PreferenceCategory android:title="@string/settings_operation_title" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="show_system_process"
        android:persistent="true"
        android:title="@string/settings_show_system_switch_title"
        android:summary="@string/settings_show_system_swith_summary" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="show_service"
        android:persistent="true"
        android:title="@string/settings_show_service_title"
        android:summary="@string/settings_show_service_summary" />

     <CheckBoxPreference
        android:defaultValue="true"
        android:key="swipe_kill_enable"
        android:persistent="true"
        android:title="@string/settings_swip_kill_switch_title"
        android:summary="@string/settings_swip_kill_switch_summary" />

</PreferenceScreen>